@model Cocorapado.Models.Usuario

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Cuenta</title>

    <!-- Vinculación del archivo CSS específico para esta vista -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/styles-mi-cuenta.css")" />
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4 text-warning">Mi informacion</h2>

        <div class="container center-container">
            <div class="form-container">
                <!-- Formulario de edición de datos -->
                <form method="post" action="@Url.Action("EditarDatos", "MiCuenta")">
                    <div class="form-group row mb-4">
                        <label for="Nombre" class="col-sm-4 col-form-label">Nombre</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="Apellido" class="col-sm-4 col-form-label">Apellido</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="Email" class="col-sm-4 col-form-label">Correo electrónico</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="Correo" name="Correo" value="@Model.Correo" required />
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="Telefono" class="col-sm-4 col-form-label">Teléfono</label>
                        <div class="col-sm-8">
                            <input type="tel" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" required />
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label for="FechaNacimiento" class="col-sm-4 col-form-label">Fecha de Nacimiento</label>
                        <div class="col-sm-8">
                            <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>
                    <!-- Botón para guardar los cambios -->
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-warning">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Vincular el archivo JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
