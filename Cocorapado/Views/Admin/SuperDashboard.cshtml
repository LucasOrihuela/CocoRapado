<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard de Ventas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            background: #343a40;
        }

            .sidebar a {
                color: #fff;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

    </style>
</head>
<body style="background-color: lightgrey;">
    <div class="sidebar">
        <h2 class="text-white text-center">Menú</h2>
        <hr class="my-4">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "ABMProfesionales")">Profesionales</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "ABMSucursales")">Sucursales</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "ABMServicios")">Servicios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "ABMServiciosPorProfesional")">Servicios por Profesional</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("Index", "ABMProfesionalesPorSucursal")">Profesionales por Sucursal</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Dashboard")">Estadísticas</a>
            </li>
        </ul>
    </div>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-12">
                <h1 class="text-center">Dashboard de Ventas</h1>
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Ventas</h5>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <select class="form-select" id="timeRange" onchange="updateChart()">
                                    <option value="daily">Diario</option>
                                    <option value="weekly">Semanal</option>
                                    <option value="monthly">Mensual</option>
                                    <option value="annual">Anual</option>
                                </select>
                            </div>
                        </div>
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom JavaScript -->
    <script src="~/js/superDashboard.js"></script>
</body>
</html>
